<div class="container">
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <h1 class="title is-2 has-text-centered">New Event</h1>
      <%= form_with model: @event do |f| %>
        <%= f.text_field :title, class: "input is-info", placeholder: "Title" %>
        <br/>
        <br/>
        <%= f.text_area :description, class: "textarea is-info", placeholder: "Description" %>
        <br/>
        <br/>
        <%= f.text_field :location, class: "input is-info", placeholder: "Location" %>
        <br/>
        <br/>
        <%= f.datetime_field :date, class: "input is-info", placeholder: "Date" %>
        <br/>
        <br/>
        <%= f.submit class: "button is-info", style: "width: 100%" %>
      <% end %>
    </div>
  </div>
</div>

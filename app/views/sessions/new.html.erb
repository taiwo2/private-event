<div class="container">
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <h1 class="title is-2 has-text-centered">Sign in</h1>
      <%= form_with model: @user, url: "/users/log_in" do |f| %>
        <%= f.text_field :name, class: "input is-info", placeholder: "Username" %>
        <br/>
        <br/>
        <%= f.submit class: "button is-info", style: "width: 100%" %>
      <% end %>
    </div>
  </div>
</div>